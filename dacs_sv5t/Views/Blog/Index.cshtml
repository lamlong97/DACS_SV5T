@model IEnumerable<DACS_SV5T.Models.TINTUC>

@{
    ViewBag.Title = "Bài viết";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@{
    var k = 0;
}

<div class="row">
    @foreach (var i in Model)
    {
        if (k % 2 == 0)
        {
            <div class="row" style="border-bottom: 1px dotted red; margin-left:20px; margin-right:20px; margin-bottom: 10px;">
                <div class="col-md-3" style="margin-bottom: 10px">
                    <img src="~/Content/img/upload/tintuc/@i.IMG" width="100px" />
                </div>
                <div class="col-md-9">
                    <a href="/chi-tiet-tin-tuc/@i.META-@i.ID_TT"><p style="font-weight:bold; font-size:15px; color: #000099">@i.TITLE</p></a>
                    <h5><p>@i.MOTA</p></h5>
                </div>
            </div>
        }
        else
        {
            <div class="row" style="border-bottom: 1px dotted red; margin-left:20px; margin-right:20px; margin-bottom: 10px;">
                <div class="col-md-3" style="margin-bottom: 10px">
                    <img src="~/Content/img/upload/tintuc/@i.IMG" width="100px" />
                </div>
                <div class="col-md-9">
                    <a href="/chi-tiet-tin-tuc/@i.META-@i.ID_TT"><h3><p style="font-weight:bold; font-size:15px; color: #000099">@i.TITLE</p></h3></a>
                    <h5><p>@i.MOTA</p></h5>
                </div>    
            </div>
        }
        k++;
    }
</div>

