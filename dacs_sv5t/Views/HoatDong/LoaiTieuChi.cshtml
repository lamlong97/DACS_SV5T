@model IEnumerable<DACS_SV5T.Models.LOAITIEUCHI>
@{
    ViewBag.Title = "Hoạt động";
    Layout = "~/Views/Shared/_HoatDongLayout.cshtml";
}

<div class="panel-group" id="accordion">
    @foreach (var item in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color:whitesmoke">
                <h4 class="panel-title" style="text-align:center;vertical-align:middle;font-weight:bold">
                    <a data-toggle="collapse" data-parent="#accordion" href="#@item.ID_LTCHI-LTC">
                        @Html.DisplayFor(modelItem => item.TEN_LTCHI)
                    </a>
                </h4>
            </div>
            <div id="@item.ID_LTCHI-LTC" class="panel-collapse">
                <div class="panel-body">
                    <!--/*Html.Action("CTTieuChi", "HoatDong", new { LTC = //item.ID_LTCHI})*/
                        //-->
                    @Html.Action("TieuChi", "HoatDong", new {LTC = item.ID_LTCHI })
                </div>
            </div>
        </div>
    }
</div>

