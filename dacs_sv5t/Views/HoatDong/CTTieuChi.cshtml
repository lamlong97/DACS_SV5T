@using DACS_SV5T.Help
@model List<DACS_SV5T.Models.CT_TEUCHI>
<style>
    th, td {
        text-align: center;
        vertical-align: middle;
    }

    th {
        background-color: whitesmoke;
    }

    td p {
        height: 50px;
        overflow-y: hidden;
        text-overflow: ellipsis;
    }

    img {
        width: 10%;
        height: 80%;
    }
</style>
@section _Header
{
    <!-- DataTables CSS -->
    <link href="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">
}
<table class="table-bordered table-hover" id="dataTables-example" style="width:100%;">
    <thead>
        <tr>
            <th width="60%">
                Nội dung
            </th>
            @Html.Action("Cap","HoatDong")
            <th width="50px">
                Hình ảnh
            </th>
            <th width="50px">

            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td style="max-width:70%" width="50%" title="Test">
                @Html.DisplayFor(modelItem => item.NOIDUNG)
            </td>
            @Html.Action("DuyetTieuChi", "HoatDong", new { ID_CTTCHI = item.ID_CTTCHI })

            @*
            <td height="20px">
                <img src="~/Content/img/control/no_icon.png" />
            </td>
            <td height="20px">
                <img src="~/Content/img/control/no_icon.png" />
            </td>
            <td height="20px">
                <img src="~/Content/img/control/no_icon.png" />
            </td>
            <td height="20px">
                <img src="~/Content/img/control/no_icon.png" />
            </td>*@

            <td width="50px" height="50px" style="text-align:center; vertical-align:middle">
                @Html.Action("HinhTieuChi", "HoatDong", new { ID_CTTCHI = item.ID_CTTCHI })
            </td>
            <td width="20px" height="20px">
                @*<a class="btn btn-success" href="@Url.Action("QuanLyMinhChung","HoatDong",new { ID_CTTCHI = @item.ID_CTTCHI})">Minh chứng</a>*@
                @Html.NoEncodeActionLink("<span class='glyphicon  glyphicon-upload'></span>", "Upload minh chứng", "QuanLyMinhChung", "HoatDong", routeValues: new { ID_CTTCHI = @item.ID_CTTCHI }, htmlAttributes: new { @class = "btn btn-primary" })
            </td>
        </tr>
        }
    </tbody>

</table>
@section _Footer
{
    <!-- DataTables JavaScript -->
    <script src="/Areas/admin/Content/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>

}