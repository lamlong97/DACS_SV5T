@model DACS_SV5T.Models.Slider

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<div style="height:15px"></div>
<div class="panel panel-red">
    <div class="panel-heading">Xem Bài viết</div>
    <div class="panel-body">
        <div>
            <dl class="dl-horizontal">
                <dt style="padding-bottom:5px">
                    @Html.Raw("Tiêu đề: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TITLE)
                </dd>

                <dt style="padding-bottom:5px">
                    @Html.Raw("Hình ảnh: ")
                </dt>

                <dd>
                    <img src="~/Content/img/slider/@Html.DisplayFor(model => model.IMG)" width="150px" />
                </dd>

                <dt style="padding-bottom:5px">
                    @Html.Raw("Ngày đăng: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DATEBEGIN)
                </dd>

                <dt style="padding-bottom:5px">
                    @Html.Raw("Meta: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.META)
                </dd>

                <dt style="padding-bottom:5px">
                    @Html.Raw("Sắp xếp: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ORDER)
                </dd>

                <dt style="padding-bottom:5px">
                    @Html.Raw("Liên kết: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LINK)
                </dd>

                <dt style="padding-bottom:5px">
                    @Html.Raw("Trạng thái: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.HIDE)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Sửa", "Edit", new { id = Model.ID_SLIDE }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Quay về", "Index", "Index", new { @class = "btn btn-danger" })
        </p>
    </div>
</div>