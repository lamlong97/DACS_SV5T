@using DACS_SV5T.Help
@model IEnumerable<DACS_SV5T.Models.CT_TEUCHI>
<style>
    th, td {
        text-align: center;
    }

        td p {
            height: 50px;
            overflow-y: hidden;
            text-overflow: ellipsis;
        }
</style>
<table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Nội dung
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{var Number = 1; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.Raw(Number++)
                </td>
                <td width="60%">
                    @Html.DisplayFor(modelItem => item.NOIDUNG)
                </td>
                <td>
                    @if (Convert.ToBoolean(Session["PQ"]) == true)
                    {
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "ChiTietTieuChi", routeValues: new { id = item.ID_CTTCHI }, htmlAttributes: new { @class = "btn btn-default" })
                    }
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-zoom-in'></span>", "Detail", "Details", "ChiTietTieuChi", routeValues: new { id = item.ID_CTTCHI }, htmlAttributes: new { @class = "btn btn-primary" })
                    @if (Convert.ToBoolean(Session["PQ"]) == true)
                    {
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "ChiTietTieuChi", routeValues: new { id = item.ID_CTTCHI }, htmlAttributes: new { @class = "btn btn-danger" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true,
                "language": {
                    "decimal": "",
                    "emptyTable": "Không có dữ liệu trong bảng",
                    "info": "Hiển thị _START_ tới _END_ ",
                    "infoEmpty": "Hiển thị 0 đến 0 của 0 danh sách",
                    "infoFiltered": "(Lọc từ _MAX_ danh sách)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Hiển _MENU_ danh sách",
                    "loadingRecords": "Đang tải...",
                    "processing": "Đang xử lý...",
                    "search": "Tìm kiếm:",
                    "zeroRecords": "Không tìm thấy",
                    "paginate": {
                        "first": "Trang đầu",
                        "last": "Cuối cùng",
                        "next": "Trang sau",
                        "previous": "Trang trước"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                }
            });
        });
</script>