@model DACS_SV5T.Models.GIOITHIEU

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<div style="height:15px"></div>
<div class="panel panel-red">
    <div class="panel-heading">Chỉnh sửa Văn bản</div>
    <div class="panel-body">
        @using (Html.BeginForm("Edit","GioiThieu",FormMethod.Post, new { enctype = "multipart/form-data"}))
        {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.aboutus, "Nội dung", htmlAttributes: new { @class = "control-label col-md-2" })
