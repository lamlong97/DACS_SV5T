@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}
<style>
    #chart_container {
        width: 100%;
        margin: 20px auto;
    }
</style>
@section _Header
{
    <script src="~/Scripts/Chart.min.js"></script>
}
<div class="row">
    <h1 style="margin-left:20px">Biểu đồ</h1>
    <hr />
    <div class="col-lg-6">
        <div class="panel panel-red" style="margin-top:20px">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i> Bảng thống kê sinh viên 5 tốt theo khoa - @ViewBag.TongSV Sinh viên
            </div>
            <div class="panel-body">
                <div id="chart_container" style="position: relative">
                    <canvas id="chartSinhVien"></canvas>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <div class="col-lg-6">
        <div class="panel panel-red" style="margin-top:20px">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i> Bảng thống kê cấp độ sinh viên 5 tốt
            </div>
            <div class="panel-body">
                <div id="chart_container">
                    <canvas id="chartSinhVien_cap"></canvas>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>


@section _Footer
{
    <script>
    var KhoaVien = @Html.Raw(Json.Encode(ViewBag.KhoaVien));
    var SinhVien_KV = @Html.Raw(Json.Encode(ViewBag.SinhVien_KV));
    var ctx = document.getElementById("chartSinhVien").getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: KhoaVien,
            datasets: [{
                label: 'Số lượng sinh viên',
                data: SinhVien_KV,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {

            responsive: true

        }
    });
    </script>
    <script>
    var Cap = @Html.Raw(Json.Encode(ViewBag.Cap));
    var SinhVien_Cap = @Html.Raw(Json.Encode(ViewBag.SinhVien_Cap));
        var sinhvien_cap = document.getElementById("chartSinhVien_cap").getContext('2d');
        var mySV_CAP = new Chart(sinhvien_cap, {
        type: 'bar',
        data: {
            labels: Cap,
            datasets: [{
                label: 'Số lượng sinh viên',
                data: SinhVien_Cap,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            maintainAspectRatio: false,
            scales: { yAxes: [{ ticks: { beginAtZero: true } }] },
            responsive: true

        }
    });
    </script>
}
