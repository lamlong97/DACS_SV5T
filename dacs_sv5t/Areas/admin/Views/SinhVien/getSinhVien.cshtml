@using DACS_SV5T.Help
@model IEnumerable<DACS_SV5T.Models.SINHVIEN>
<style>
    th, td {
        text-align: center;
    }

        td p {
            height: 50px;
            overflow-y: hidden;
            text-overflow: ellipsis;
        }
</style>
<table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Tên sinh viên
            </th>
            <th>
                Lớp
            </th>
            <th>
                Mã số sinh viên
            </th>
            <th>
                Cấp đã đạt
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{var Number = 1; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.Raw(Number++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TEN_SV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LOP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MSSV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CAP.TEN_CAP)
                </td>
                <td>
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-zoom-in'></span>", "Detail", "Details", "SinhVien", routeValues: new { id = item.ID_SV }, htmlAttributes: new { @class = "btn btn-primary" })
                    @if (Convert.ToBoolean(Session["PQ"]) == true)
                    {
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "SinhVien", routeValues: new { id = item.ID_SV }, htmlAttributes: new { @class = "btn btn-danger" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>
