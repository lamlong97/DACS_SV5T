@using DACS_SV5T.Help
@model IEnumerable<DACS_SV5T.Models.TINTUC>

@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<style>
    th, td {
        text-align: center;
    }

        td p {
            overflow-y: hidden;
            text-overflow: ellipsis;
        }
</style>
@section _Header
{
    <!-- DataTables CSS -->
    <link href="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">

}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red"  style="margin-top:20px">
            <div class="panel-heading">
                Quản lý tin tức
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @if (Convert.ToBoolean(Session["PQ"]) == true)
                {
                    <div class="bs-example" style="text-align:right; padding-bottom:10px;">
                        <div class="btn-group">
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span> Thêm mới", "Create", "Create", "TinTuc", routeValues: new { }, htmlAttributes: new { @class = "btn btn-primary" })
                        </div>
                    </div>
                }
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    STT
                                </th>
                                <th>
                                    Tiêu đề
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{var Number = 1; }

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.Raw(Number++)
                                    </td>
                                    <td width="70%">
                                        @Html.DisplayFor(modelItem => item.TITLE)
                                    </td>
                                    <td>
                                        @if (Convert.ToBoolean(Session["PQ"]) == true)
                                        {
                                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "TinTuc", routeValues: new { id = item.ID_TT }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                                        }
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-zoom-in'></span>", "Detail", "Details", "TinTuc", routeValues: new { id = item.ID_TT }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                                        @if (Convert.ToBoolean(Session["PQ"]) == true)
                                        {
                                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "TinTuc", routeValues: new { id = item.ID_TT }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
                                        }
                                    </td>
                                </tr>
                            }

                    </table>
                </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@section _Footer
{
    <!-- DataTables JavaScript -->
    <script src="/Areas/admin/Content/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>

}