@model DACS_SV5T.Models.NGUOIDUNG

@{
    ViewBag.Title = "Xóa người dùng";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

@{
    ViewBag.Title = "Xóa người quản trị";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red" style="margin-top:20px">
            <div class="panel-heading">
                Bạn có muốn xóa @Html.DisplayFor(model => model.TENND)
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        Tên đăng nhập
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TENDN)
                    </dd>

                    <dt>
                        Tên người dùng
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TENND)
                    </dd>

                    <dt>
                        Quyền
                    </dt>

                    <dd>
                        @(Model.PQ.GetValueOrDefault(true) ? "Administrator" : "User")
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Xóa" class="btn btn-danger" /> |
                        @Html.ActionLink("Quay về", "Index")
                    </div>
                }
            </div>


        </div>
    </div>
</div>